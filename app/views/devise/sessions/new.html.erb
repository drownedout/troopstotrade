<div class="fill">
	<div class="container">
		<h2>User Log In</h2>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<%= f.error_notification %>
		<div class="container">
			<div class="row">
				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-body">
							  <div class="form-inputs">
							  	
							  	<div class="form-group">
							  	<%= f.label :email, "Email" %>
							    <%= f.text_field :email, required: false, autofocus: true, class: "form-control" %>
							    </div>

							    <div class="form-group">
							    <%= f.label :password, "Password" %>
							    <%= f.password_field :password, required: false, class: "form-control" %>
							    </div>

							    <div class="form-group">
							    <%= f.label :remember_me, "Remember Me" %> <br/>
							    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
							    </div>

							  </div>

							  <div class="form-actions">
							    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
							  </div>

							<% end %>
						</div>
					</div>
				</div>
				<div class="col-md-offset-1 col-md-4">
					<h1>Organizations Log In Here!</h1>
					<%= link_to "Login", new_org_session_path 	%>
				</div>
			</div>
		</div>
		<div class="container">
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>