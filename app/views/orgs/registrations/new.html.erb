<div class="container">
		<h2 class="text-center margin_sign">Organization Sign Up</h2>
		<p class="text-center"><em>All fields with a * are required </em></p>
		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  	<%= devise_error_messages! %>
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-default">
					<div class="panel-body">

					  	<div class="form-inputs">
					    
						    <div class="form-group">
							    <%= f.label :company, "Company Name *" %> 
							    <%= f.text_field :company, required: true, autofocus: true , placeholder: "Company Name", class: "form-control" %> 
						    </div>

						    <div class="form-group">
							    <%= f.label :contactname, "Primary Contact Name *" %> 
							    <%= f.text_field :contactname, required: true, autofocus: true , placeholder: "Primary Contact Name", class: "form-control" %> 
						    </div>

						    <div class="form-group">

						    <%= f.label :password, "Password *" %> <br/>
						    <%= f.hint "#{@minimum_password_length} characters minimum" if @minimum_password_length %> 
						    <%= f.password_field :password, required: true, class: "form-control" %> 

						    </div>
						    <div class="form-group">
						    	<%= f.label :password_confirmation, "Confirm Password *" %>
						    	<%= f.password_field :password_confirmation, required: true, class: "form-control" %>
						    </div>
						    <div class="form-group">
						    	<%= f.label :email, "Email *" %>
						    	<%= f.email_field :email, placeholder: "Email", required: true, class: "form-control" %>
						    </div>
						    <div class="form-group">	
						    	<%= f.label :city, "City *" %>
						    	<%= f.text_field :city, placeholder: "City", required: true, class: "form-control" %> 
						    </div>

						    <div class="form-group">
						    	<%= f.label :state, "State *" %>
						    	<%= f.text_field :state, placeholder: "State", required: true, class: "form-control" %> 
						    </div>

						    <div class="form-group">
						    	<%= f.label :phone, "Phone Number" %>
						    	<%= f.text_field :phone, required: false, placeholder: "(XXX) XXX-XXXX", class: "form-control" %> 
						    </div>
						  	<div class="form-actions">
						   	 <%= f.button :submit, "Sign Up", class: "btn btn-primary"  %>
						  	</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container" id="render-new-bottom">
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<p>Already have an account? </p><%= render "orgs/shared/links" %>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>
